    <script>
        // 获取访问者信息
        function getVisitorInfo() {
            // 获取IP地址 - 实际应用中需要后端获取
            document.getElementById('ip-address').textContent = '192.168.1.1 (示例)';
            
            // 获取位置信息（模拟）
            document.getElementById('location').textContent = '中国, 北京 (模拟)';
            
            // 获取设备信息
            const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);
            document.getElementById('device').textContent = isMobile ? '移动设备' : '桌面设备';
            
            // 获取浏览器信息
            const userAgent = navigator.userAgent;
            let browserName;
            
            if (userAgent.includes('Chrome')) browserName = 'Chrome';
            else if (userAgent.includes('Firefox')) browserName = 'Firefox';
            else if (userAgent.includes('Safari')) browserName = 'Safari';
            else if (userAgent.includes('Edge')) browserName = 'Edge';
            else browserName = '未知浏览器';
            
            document.getElementById('browser').textContent = browserName;
            
            // 获取当前时间
            const now = new Date();
            const timeString = now.toLocaleString('zh-CN', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            });
            
            document.getElementById('time').textContent = timeString;
        }
        
        // 发送信息到Bark
        async function sendToBark() {
            const barkUrl = document.getElementById('bark-url').value;
            const customMessage = document.getElementById('message').value || '新访客通知';
            const statusElement = document.getElementById('status');
            
            // 验证URL格式
            if (!barkUrl || !barkUrl.startsWith('https://api.day.app/')) {
                statusElement.textContent = '错误：请输入有效的Bark URL';
                statusElement.className = 'status error';
                return;
            }
            
            // 获取访客信息（在实际应用中，这些信息应由后端收集）
            const ip = '192.168.1.1 (示例)';
            const location = '中国, 北京 (模拟)';
            const device = document.getElementById('device').textContent;
            const browser = document.getElementById('browser').textContent;
            const time = document.getElementById('time').textContent;
            
            // 构建推送消息
            const title = encodeURIComponent(customMessage);
            const body = encodeURIComponent(
                `IP地址: ${ip}\n位置: ${location}\n设备: ${device}\n浏览器: ${browser}\n访问时间: ${time}`
            );
            
            const fullUrl = `${barkUrl}${title}/${body}?group=访问记录`;
            
            try {
                // 在实际应用中，这里应该通过后端发送请求
                // 前端直接发送可能会遇到CORS问题
                // 这里仅模拟发送过程
                
                // 模拟请求延迟
                statusElement.textContent = '正在发送通知...';
                statusElement.className = 'status';
                statusElement.style.display = 'block';
                
                await new Promise(resolve => setTimeout(resolve, 1500));
                
                // 模拟成功响应
                statusElement.textContent = '通知已成功发送到您的设备!';
                statusElement.className = 'status success';
                
                console.log('模拟Bark推送:', fullUrl);
            } catch (error) {
                statusElement.textContent = '发送失败: ' + error.message;
                statusElement.className = 'status error';
                console.error('推送失败:', error);
            }
        }
        
        // 初始化页面
        document.addEventListener('DOMContentLoaded', () => {
            getVisitorInfo();
            
            // 添加发送按钮事件
            document.getElementById('send-btn').addEventListener('click', sendToBark);
        });
    </script>
</body>
